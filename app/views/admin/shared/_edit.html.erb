<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<%  if current_user.profile_id==1 %>
    <h3>Merge Articles</h3>
    <p class='help-block'>Since you are an administrator, you can merge the content of two articles.</p>
    <%= form_tag('/mergings/'+@article.id.to_s+"/create", :enctype => "multipart/form-data", :class => className, :method => :post) do %>

        <label for="merge_article_id">Article ID</label>
        <input  name="merge_with" id="merge_with">
        <br>

        <input type="submit" name="Merge" value="Merge" class="btn">


        
    <% end %>
    <% if @article.mergeds.any?  %>
        Merged articles:
        <% @article.mergeds.each do |a| %>
            <%= a.id %>
        <% end %>
    <% end %>

<% end %>